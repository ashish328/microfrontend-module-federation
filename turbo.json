{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build:watch"]
    },
    "serve": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^serve"]
    }
  }
}
